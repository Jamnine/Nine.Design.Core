<Window
    x:Class="Nine.Design.Login.Views.FrmLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nine.Design.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FrmLogin"
    Width="710"
    Height="550"
    AllowsTransparency="True"
    Background="{x:Null}"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Nine.Design.Login;component/Style/CirclePointRingLoading.xaml" />
    </Window.Resources>
    <!--  窗口四周阴影  -->
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="10"
            Direction="0"
            Opacity="0.7"
            ShadowDepth="0"
            Color="#FF4D4D4D" />
    </Window.Effect>

    <!--  外围Grid  -->
    <Grid
        x:Name="StartGrid"
        Margin="10"
        MouseDown="Grid_MouseDown">

        <!--  外围Grid的动画事件  -->
        <Grid.Resources>
            <Storyboard x:Key="ExitTo" Timeline.DesiredFrameRate="300">
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Opacity"
                    From="1"
                    To="0"
                    Duration="0:0:2" />
            </Storyboard>
            <Storyboard x:Key="StartTo" Timeline.DesiredFrameRate="300">
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Width"
                    From="0"
                    To="690"
                    Duration="0:0:2" />
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Opacity"
                    From="0"
                    To="1"
                    Duration="0:0:2" />
            </Storyboard>
        </Grid.Resources>

        <!--  窗口圆角Border  -->
        <Border
            x:Name="First_Border"
            Grid.ColumnSpan="2"
            Background="#FFF7F7F7"
            CornerRadius="5"
            Opacity="1">

            <!--  Border内Grid块  -->
            <Grid x:Name="First_Gird">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  窗口左分块图片  -->
                <!--<Border Grid.Column="0" CornerRadius="5" >
                    <Border.Background>
                        <ImageBrush ImageSource="Images\login_background.png"/>
                    </Border.Background>
                -->
                <!--<Image Grid.Column="0" UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" Panel.ZIndex="1" Source="Images\logo_login.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="10,10,0,0" />
                -->
                <!--
                </Border>-->



                <!--  窗口右信息分块  -->
                <Grid
                    x:Name="layout"
                    Grid.Column="0"
                    Width="400"
                    Height="Auto"
                    Margin="-1,-1,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Background="#FF3EAAFF">
                    <!--  Background="#19000000"  -->
                    <Grid.Clip>
                        <!--<RectangleGeometry Rect="0,0,400,530" RadiusX="5" RadiusY="5" />-->
                        <PathGeometry Figures="M400.5,525.5 L400.5,5.5 400.53125,0.525625 395.5,0.5 5.5,0.5 C2.78311,0.5 0.5,2.78311 0.5,5.5 L0.5,525.5 C0.5,528.21689 2.78311,531.5 5.5,531.5 5.5,531.5 395.5,531.5 395.5,531.5 400.45313,531.52563 400.45313,531.52563 400.45313,531.52563 z" />
                    </Grid.Clip>
                </Grid>



                <!--  窗口右信息分块  -->
                <Grid
                    x:Name="Right_Grid"
                    Grid.Column="1"
                    Panel.ZIndex="1">

                    <!--  窗口右分块动画事件  -->
                    <Grid.Resources>

                        <!--  加载窗口动画事件  -->
                        <Storyboard x:Key="Loading_Enter" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Right_Grid_Eff"
                                Storyboard.TargetProperty="Radius"
                                From="0"
                                To="10"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Loading_Leave" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Right_Grid_Eff"
                                Storyboard.TargetProperty="Radius"
                                From="10"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>

                        <!--  注册按钮动画事件  -->
                        <Storyboard x:Key="Login_To_Register_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Login_To_Register_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Register_To_Login_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Register_To_Login_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>

                        <!--  找回密码动画事件  -->
                        <Storyboard x:Key="Login_To_Retrieve_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Login_To_Retrieve_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Retrieve_To_Login_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Retrieve_To_Login_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                    </Grid.Resources>

                    <!--  用于加载时产生该Gird的模糊效果  -->
                    <Grid.Effect>
                        <BlurEffect x:Name="Right_Grid_Eff" Radius="0" />
                    </Grid.Effect>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  退出按钮分块  -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="FouceBox" Width="0" />

                        <!--  关闭按钮：Grid 接管交互，Path 显示矢量图标  -->
                        <Grid
                            x:Name="Exit_Button"
                            Width="15"
                            Height="13"
                            Margin="0,19,19,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Cursor="Hand"
                            MouseDown="Exit_MouseDown"
                            MouseEnter="Exit_MouseEnter"
                            MouseLeave="Exit_MouseLeave"
                            MouseUp="Exit_Img_MouseUp"
                            ToolTip="关闭">

                            <Path
                                x:Name="Exit_Icon"
                                Fill="#bfbfbf"
                                IsHitTestVisible="False"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                RenderTransformOrigin="0.5,0.5"
                                Stretch="Uniform"
                                Stroke="#bfbfbf"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="0.1">

                                <!--  核心：SVG 路径数据转换（适配 WPF PathGeometry）  -->
                                <Path.Data>
                                    <PathGeometry Figures="M563.84,512 L826.304,198.784 A7.936,7.936 0 0 0 819.904,185.984 H739.968 A16.32,16.32 0 0 0 727.68,191.68 L511.616,449.792 L295.104,191.68 A16,16 0 0 0 282.816,185.984 H203.008 A7.936,7.936 0 0 0 196.608,198.784 L459.008,512 L196.928,825.216 A7.936,7.936 0 0 0 203.328,838.016 H282.816 A16.32,16.32 0 0 0 295.104,832 L511.616,574.208 L728.128,832 A16,16 0 0 0 740.416,838.016 H820.224 A7.936,7.936 0 0 0 826.624,825.216 L563.84,512 Z" />
                                </Path.Data>
                            </Path>
                        </Grid>
                    </Grid>
                    <!--<Grid Grid.Row="0">
                        <TextBox x:Name="FouceBox" Width="0" />
                    -->
                    <!--<Button Width="30" Height="30" Margin="0,10,10,0" HorizontalAlignment="Right"  VerticalAlignment="Top" Click="Button_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="Images\exit_1.png"/>
                            </Button.Background>
                        </Button>-->
                    <!--
                        <Image
                            x:Name="Exit_Img"
                            Width="30"
                            Height="30"
                            Margin="0,10,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            MouseEnter="Exit_MouseEnter"
                            MouseLeave="Exit_MouseLeave"
                            MouseUp="Exit_Img_MouseUp"
                            Source="/Nine.Design.Login;component/Images/exit_1.png"
                            ToolTip="关闭" />
                    </Grid>-->

                    <!--  登录界面Grid块  -->
                    <Grid
                        x:Name="Login_Grid"
                        Grid.Row="1"
                        Width="290"
                        HorizontalAlignment="Left"
                        Opacity="1">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Image
                                x:Name="Head_Img"
                                Width="100"
                                Height="100"
                                Margin="0,0,95,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                MouseEnter="Head_MouseEnter"
                                MouseLeave="Head_MouseLeave"
                                MouseUp="Head_MouseUp"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                RenderTransformOrigin="0.5,0.5"
                                SnapsToDevicePixels="True"
                                Source="/Nine.Design.Login;component/Images/NumberNine.png"
                                UseLayoutRounding="True">
                                <Image.Resources>
                                    <Storyboard
                                        x:Key="Head_Show"
                                        x:Name="Head_Show"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Eff"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.7"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                    <Storyboard
                                        x:Key="Head_Hide"
                                        x:Name="Head_Hide"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Eff"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.0"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                    <Storyboard
                                        x:Key="Head_Mobile"
                                        x:Name="Head_Mobile"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Angle"
                                            Storyboard.TargetProperty="Angle"
                                            From="0"
                                            To="360"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                </Image.Resources>
                                <Image.Effect>
                                    <DropShadowEffect
                                        x:Name="Head_Eff"
                                        BlurRadius="20"
                                        Direction="0"
                                        Opacity="0.0"
                                        ShadowDepth="0"
                                        Color="#FF666666" />
                                </Image.Effect>
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform x:Name="Head_Angle" Angle="0" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">

                                <!--<Border
                                    Width="220"
                                    Height="50"
                                    Margin="0,0,35,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    MouseEnter="UserName_Box_MouseEnter"
                                    MouseLeave="UserName_Box_MouseLeave">

                                    <Grid>
                                        <TextBox
                                            x:Name="UserName_Box"
                                            Margin="5,8"
                                            VerticalContentAlignment="Center"
                                            Panel.ZIndex="1"
                                            Background="#FFF7F7F7"
                                            BorderBrush="{x:Null}"
                                            BorderThickness="0"
                                            CaretBrush="#FF7F7F7F"
                                            FontSize="14"
                                            Foreground="#FF7F7F7F"
                                            GotFocus="UserName_Box_GotFocus"
                                            LostFocus="UserName_Box_LostFocus"
                                            SelectionBrush="#FF0078D7"
                                            Text="用户名/邮箱" />
                                        <Image
                                            x:Name="UserName_Img"
                                            Opacity="0.8"
                                            Source="/Nine.Design.Login;component/Images/userbox_1.png" />
                                    </Grid>

                                </Border>-->
                                <Border
                                    Width="220"
                                    Height="50"
                                    Margin="0,0,35,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    MouseEnter="UserName_Box_MouseEnter"
                                    MouseLeave="UserName_Box_MouseLeave">

                                    <Grid>
                                        <!--  用户名输入框（保持原有配置不变）  -->
                                        <TextBox
                                            x:Name="UserName_Box"
                                            Margin="35,8,5,8"
                                            VerticalContentAlignment="Center"
                                            Panel.ZIndex="1"
                                            Background="#FFF7F7F7"
                                            BorderBrush="{x:Null}"
                                            BorderThickness="0"
                                            CaretBrush="#FF7F7F7F"
                                            FontSize="14"
                                            Foreground="#FF7F7F7F"
                                            GotFocus="UserName_Box_GotFocus"
                                            LostFocus="UserName_Box_LostFocus"
                                            SelectionBrush="#FF0078D7"
                                            Text="用户名/邮箱" />

                                        <!--  1. 矢量用户图标（替换为新 SVG 路径）  -->
                                        <Path
                                            x:Name="UserName_Icon"
                                            Width="16"
                                            Height="16"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Fill="#bfbfbf"
                                            IsHitTestVisible="False"
                                            Opacity="0.8"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Stretch="Uniform"
                                            Stroke="#bfbfbf"
                                            StrokeEndLineCap="Round"
                                            StrokeLineJoin="Round"
                                            StrokeStartLineCap="Round"
                                            StrokeThickness="0.1">
                                            <!--  应用图标样式  -->

                                            <!--  核心：新 SVG 转换的用户图标路径（合并两个 path）  -->
                                            <Path.Data>
                                                <PathGeometry Figures="M758.494 309.269c0-153.706-121.349-278.759-270.522-278.759-149.135 0-270.505 125.051-270.505 278.759 0 104.819 56.481 196.214 139.675 243.81-163.206 60.427-280.258 221.445-280.258 410.164 0 16.698 13.146 30.25 29.342 30.25 16.237 0 29.361-13.533 29.361-30.25 0-206.897 163.338-375.23 364.105-375.23 2.464 0 4.814-0.393 7.088-0.979 140.397-9.999 251.715-130.587 251.715-277.761M487.971 527.531c-116.778 0-211.782-97.892-211.782-218.261 0-120.349 95.006-218.243 211.782-218.243 116.795 0 211.802 97.892 211.802 218.243 0.021 120.369-95.006 218.261-211.802 218.261M544.27 685.59c0 16.681 13.161 30.25 29.361 30.25h344.113c16.237 0 29.361-13.549 29.361-30.25 0-16.698-13.124-30.25-29.361-30.25h-344.113c-16.197 0-29.361 13.549-29.361 30.25M917.739 779.040h-344.113c-16.197 0-29.361 13.533-29.361 30.267 0 16.698 13.161 30.25 29.361 30.25h344.113c16.237 0 29.361-13.533 29.361-30.25 0-16.735-13.124-30.267-29.361-30.267M917.739 917.866h-344.113c-16.197 0-29.361 13.533-29.361 30.25s13.161 30.25 29.361 30.25h344.113c16.237 0 29.361-13.533 29.361-30.25s-13.124-30.25-29.361-30.25z" />
                                            </Path.Data>
                                        </Path>

                                        <!--  2. 矢量底部横线（修复消失问题，添加默认向上阴影）  -->
                                        <Path
                                            x:Name="UserName_Line"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Cursor=""
                                            IsHitTestVisible="False"
                                            Opacity="0.8"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Stretch="Fill"
                                            Stroke="#a2a4a7"
                                            StrokeEndLineCap="Round"
                                            StrokeLineJoin="Round"
                                            StrokeStartLineCap="Round"
                                            StrokeThickness="1">
                                            <!--  应用横线样式  -->

                                            <Path.Data>
                                                <PathGeometry Figures="M0,0 L1,0" />
                                                <!--  自适应宽度直线  -->
                                            </Path.Data>

                                            <!--  默认向上阴影（满足需求：默认状态有轻微上阴影）  -->
                                            <Path.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="2"
                                                    Direction="90"
                                                    Opacity="0.2"
                                                    ShadowDepth="1"
                                                    Color="#686969" />
                                                <!--  阴影距离，1px 更自然  -->
                                            </Path.Effect>
                                        </Path>

                                        <!--  交互样式：悬浮/焦点时图标+横线变色（统一控制）  -->
                                        <Grid.Resources>
                                            <!--  图标样式：悬浮/焦点变色  -->
                                            <Style x:Key="IconStyle" TargetType="Path">
                                                <Style.Triggers>
                                                    <!--  Border 悬浮时变色  -->
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                        <Setter Property="Stroke" Value="#FF0078D7" />
                                                        <Setter Property="Opacity" Value="1" />
                                                    </DataTrigger>
                                                    <!--  输入框焦点时变色（优先级高于悬浮）  -->
                                                    <DataTrigger Binding="{Binding IsFocused, ElementName=UserName_Box}" Value="True">
                                                        <Setter Property="Stroke" Value="#FF0078D7" />
                                                        <Setter Property="Opacity" Value="1" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>

                                            <!--  横线样式：与图标同步变色，阴影同步调整  -->
                                            <Style x:Key="LineStyle" TargetType="Path">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                        <Setter Property="Stroke" Value="#FF0078D7" />
                                                        <Setter Property="Opacity" Value="1" />
                                                        <!--  悬浮时阴影变深，增强视觉反馈  -->
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect
                                                                    BlurRadius="2"
                                                                    Direction="90"
                                                                    Opacity="0.9"
                                                                    ShadowDepth="1"
                                                                    Color="#DDDDDD" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsFocused, ElementName=UserName_Box}" Value="True">
                                                        <Setter Property="Stroke" Value="#FF0078D7" />
                                                        <Setter Property="Opacity" Value="1" />
                                                        <!--  焦点时阴影与悬浮一致  -->
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect
                                                                    BlurRadius="2"
                                                                    Direction="90"
                                                                    Opacity="0.9"
                                                                    ShadowDepth="1"
                                                                    Color="#DDDDDD" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Resources>
                                    </Grid>
                                </Border>

                            </Grid>

                            <Grid Grid.Row="1">

                                <Border
                                    Width="220"
                                    Height="50"
                                    Margin="0,0,35,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    MouseEnter="UserPass_Box_MouseEnter"
                                    MouseLeave="UserPass_Box_MouseLeave">

                                    <Grid>
                                        <Label
                                            x:Name="UserPass_Box_Text"
                                            Margin="35,0,40,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="1"
                                            Content="密码"
                                            FontSize="14"
                                            Foreground="#FF7F7F7F" />

                                        <PasswordBox
                                            x:Name="UserPass_Box"
                                            Margin="35,8,40,8"
                                            VerticalContentAlignment="Center"
                                            Panel.ZIndex="2"
                                            Background="{x:Null}"
