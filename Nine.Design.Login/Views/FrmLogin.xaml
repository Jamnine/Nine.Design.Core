<Window
    x:Class="Nine.Design.Login.Views.FrmLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nine.Design.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FrmLogin"
    Width="710"
    Height="550"
    AllowsTransparency="True"
    Background="{x:Null}"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Nine.Design.Login;component/Style/CirclePointRingLoading.xaml" />
    </Window.Resources>
    <!--  窗口四周阴影  -->
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="10"
            Direction="0"
            Opacity="0.7"
            ShadowDepth="0"
            Color="#FF4D4D4D" />
    </Window.Effect>

    <!--  外围Grid  -->
    <Grid
        x:Name="StartGrid"
        Margin="10"
        MouseDown="Grid_MouseDown">

        <!--  外围Grid的动画事件  -->
        <Grid.Resources>
            <Storyboard x:Key="ExitTo" Timeline.DesiredFrameRate="300">
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Opacity"
                    From="1"
                    To="0"
                    Duration="0:0:2" />
            </Storyboard>
            <Storyboard x:Key="StartTo" Timeline.DesiredFrameRate="300">
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Width"
                    From="0"
                    To="690"
                    Duration="0:0:2" />
                <DoubleAnimation
                    SpeedRatio="6"
                    Storyboard.TargetName="StartGrid"
                    Storyboard.TargetProperty="Opacity"
                    From="0"
                    To="1"
                    Duration="0:0:2" />
            </Storyboard>
        </Grid.Resources>

        <!--  窗口圆角Border  -->
        <Border
            x:Name="First_Border"
            Grid.ColumnSpan="2"
            Background="#FFF7F7F7"
            CornerRadius="5"
            Opacity="1">

            <!--  Border内Grid块  -->
            <Grid x:Name="First_Gird">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  窗口左分块图片  -->
                <!--<Border Grid.Column="0" CornerRadius="5" >
                    <Border.Background>
                        <ImageBrush ImageSource="Images\login_background.png"/>
                    </Border.Background>
                -->
                <!--<Image Grid.Column="0" UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" Panel.ZIndex="1" Source="Images\logo_login.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="10,10,0,0" />
                -->
                <!--
                </Border>-->



                <!--  窗口右信息分块  -->
                <Grid
                    x:Name="layout"
                    Grid.Column="0"
                    Margin="-1,-1,0,0"
                    Background="#19000000">
                    <Grid.Clip>
                        <!--<RectangleGeometry Rect="0,0,400,530" RadiusX="5" RadiusY="5" />-->
                        <PathGeometry Figures="M400.5,525.5 L400.5,5.5 400.53125,0.525625 395.5,0.5 5.5,0.5 C2.78311,0.5 0.5,2.78311 0.5,5.5 L0.5,525.5 C0.5,528.21689 2.78311,531.5 5.5,531.5 5.5,531.5 395.5,531.5 395.5,531.5 400.45313,531.52563 400.45313,531.52563 400.45313,531.52563 z" />
                    </Grid.Clip>
                </Grid>



                <!--  窗口右信息分块  -->
                <Grid
                    x:Name="Right_Grid"
                    Grid.Column="1"
                    Panel.ZIndex="1">

                    <!--  窗口右分块动画事件  -->
                    <Grid.Resources>

                        <!--  加载窗口动画事件  -->
                        <Storyboard x:Key="Loading_Enter" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Right_Grid_Eff"
                                Storyboard.TargetProperty="Radius"
                                From="0"
                                To="10"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Loading_Leave" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Right_Grid_Eff"
                                Storyboard.TargetProperty="Radius"
                                From="10"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>

                        <!--  注册按钮动画事件  -->
                        <Storyboard x:Key="Login_To_Register_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Login_To_Register_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Register_To_Login_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Register_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Register_To_Login_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>

                        <!--  找回密码动画事件  -->
                        <Storyboard x:Key="Login_To_Retrieve_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Login_To_Retrieve_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Retrieve_To_Login_1" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="6"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Retrieve_Grid"
                                Storyboard.TargetProperty="Width"
                                From="290"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Retrieve_To_Login_2" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="2"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Width"
                                From="0"
                                To="290"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Login_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                    </Grid.Resources>

                    <!--  用于加载时产生该Gird的模糊效果  -->
                    <Grid.Effect>
                        <BlurEffect x:Name="Right_Grid_Eff" Radius="0" />
                    </Grid.Effect>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  退出按钮分块  -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="FouceBox" Width="0" />
                        <!--<Button Width="30" Height="30" Margin="0,10,10,0" HorizontalAlignment="Right"  VerticalAlignment="Top" Click="Button_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="Images\exit_1.png"/>
                            </Button.Background>
                        </Button>-->
                        <Image
                            x:Name="Exit_Img"
                            Width="30"
                            Height="30"
                            Margin="0,10,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            MouseEnter="Exit_MouseEnter"
                            MouseLeave="Exit_MouseLeave"
                            MouseUp="Exit_Img_MouseUp"
                            Source="/Nine.Design.Login;component/Images/exit_1.png"
                            ToolTip="关闭" />
                    </Grid>

                    <!--  登录界面Grid块  -->
                    <Grid
                        x:Name="Login_Grid"
                        Grid.Row="1"
                        Width="290"
                        HorizontalAlignment="Left"
                        Opacity="1">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Image
                                x:Name="Head_Img"
                                Width="100"
                                Height="100"
                                Margin="0,0,95,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                MouseEnter="Head_MouseEnter"
                                MouseLeave="Head_MouseLeave"
                                MouseUp="Head_MouseUp"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                RenderTransformOrigin="0.5,0.5"
                                SnapsToDevicePixels="True"
                                Source="/Nine.Design.Login;component/Images/NumberNine.png"
                                UseLayoutRounding="True">
                                <Image.Resources>
                                    <Storyboard
                                        x:Key="Head_Show"
                                        x:Name="Head_Show"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Eff"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.7"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                    <Storyboard
                                        x:Key="Head_Hide"
                                        x:Name="Head_Hide"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Eff"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.0"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                    <Storyboard
                                        x:Key="Head_Mobile"
                                        x:Name="Head_Mobile"
                                        Timeline.DesiredFrameRate="300">
                                        <DoubleAnimation
                                            SpeedRatio="3"
                                            Storyboard.TargetName="Head_Angle"
                                            Storyboard.TargetProperty="Angle"
                                            From="0"
                                            To="360"
                                            Duration="00:00:01" />
                                    </Storyboard>
                                </Image.Resources>
                                <Image.Effect>
                                    <DropShadowEffect
                                        x:Name="Head_Eff"
                                        BlurRadius="20"
                                        Direction="0"
                                        Opacity="0.0"
                                        ShadowDepth="0"
                                        Color="#FF666666" />
                                </Image.Effect>
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform x:Name="Head_Angle" Angle="0" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">

                                <Border
                                    Width="220"
                                    Height="50"
                                    Margin="0,0,35,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    MouseEnter="UserName_Box_MouseEnter"
                                    MouseLeave="UserName_Box_MouseLeave">

                                    <Grid>
                                        <TextBox
                                            x:Name="UserName_Box"
                                            Margin="5,8"
                                            VerticalContentAlignment="Center"
                                            Panel.ZIndex="1"
                                            Background="#FFF7F7F7"
                                            BorderBrush="{x:Null}"
                                            BorderThickness="0"
                                            CaretBrush="#FF7F7F7F"
                                            FontSize="14"
                                            Foreground="#FF7F7F7F"
                                            GotFocus="UserName_Box_GotFocus"
                                            LostFocus="UserName_Box_LostFocus"
                                            SelectionBrush="#FF0078D7"
                                            Text="用户名/邮箱" />
                                        <Image
                                            x:Name="UserName_Img"
                                            Opacity="0.8"
                                            Source="/Nine.Design.Login;component/Images/userbox_1.png" />
                                    </Grid>

                                </Border>

                            </Grid>

                            <Grid Grid.Row="1">

                                <Border
                                    Width="220"
                                    Height="50"
                                    Margin="0,0,35,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    MouseEnter="UserPass_Box_MouseEnter"
                                    MouseLeave="UserPass_Box_MouseLeave">

                                    <Grid>
                                        <Label
                                            x:Name="UserPass_Box_Text"
                                            Margin="2,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="1"
                                            Content="密码"
                                            FontSize="14"
                                            Foreground="#FF7F7F7F" />
                                        <PasswordBox
                                            x:Name="UserPass_Box"
                                            Margin="5,8,40,8"
                                            VerticalContentAlignment="Center"
                                            Panel.ZIndex="2"
                                            Background="{x:Null}"
                                            BorderBrush="{x:Null}"
                                            BorderThickness="0"
                                            CaretBrush="#FF7F7F7F"
                                            FontSize="17"
                                            Foreground="Black"
                                            GotFocus="UserPass_Box_GotFocus"
                                            Keyboard.KeyUp="UserPass_Box_KeyUp"
                                            LostFocus="UserPass_Box_LostFocus"
                                            SelectionBrush="#FF0078D7" />
                                        <Image
                                            x:Name="Login_Button"
                                            Width="40"
                                            Height="40"
                                            HorizontalAlignment="Right"
                                            Panel.ZIndex="1"
                                            MouseEnter="Login_Button_MouseEnter"
                                            MouseLeave="Login_Button_MouseLeave"
                                            MouseUp="Login_Button_MouseUp"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="/Nine.Design.Login;component/Images/login_Button_1.png" />
                                        <Image
                                            x:Name="UserPass_Img"
                                            Opacity="0.8"
                                            Source="/Nine.Design.Login;component/Images/userbox_1.png" />
                                    </Grid>

                                </Border>

                            </Grid>

                        </Grid>

                        <Grid Grid.Row="2">

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">

                                <CheckBox
                                    Margin="0,0,187,10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="#FFF7F7F7"
                                    BorderBrush="#FFC9C9C9"
                                    Content="记住密码"
                                    Foreground="#FF727272"
                                    IsChecked="True" />
                                <Label
                                    x:Name="Retrieve_Button"
                                    Margin="0,0,35,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Content="找回密码"
                                    Cursor="Hand"
                                    Foreground="#FF727272"
                                    MouseEnter="Retrieve_Button_MouseEnter"
                                    MouseLeave="Retrieve_Button_MouseLeave"
                                    MouseUp="Retrieve_Button_MouseUp" />
                            </Grid>

                            <Grid Grid.Row="1">

                                <CheckBox
                                    Margin="0,5,187,30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="#FFF7F7F7"
                                    BorderBrush="#FFC9C9C9"
                                    Content="自动登录"
                                    Foreground="#FF727272"
                                    IsChecked="True" />
                                <Label
                                    x:Name="Register_Button"
                                    Height="25"
                                    Margin="0,0,35,25"
                                    HorizontalAlignment="Right"
                                    Content="注册账号"
                                    Cursor="Hand"
                                    Foreground="#FF727272"
                                    MouseEnter="Register_Button_MouseEnter"
                                    MouseLeave="Register_Button_MouseLeave"
                                    MouseUp="Register_Button_MouseUp" />

                            </Grid>

                        </Grid>

                    </Grid>

                    <!--  注册界面Grid块  -->
                    <Grid
                        x:Name="Register_Grid"
                        Grid.Row="1"
                        Width="0"
                        HorizontalAlignment="Right"
                        Opacity="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Label
                                Width="60"
                                Margin="115,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="注册"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="#FF2E2E2E" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RegisterName_Box_MouseEnter"
                                MouseLeave="RegisterName_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RegisterName_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RegisterName_Box_GotFocus"
                                        LostFocus="RegisterName_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="用户名" />
                                    <Image
                                        x:Name="RegisterName_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RegisterEmail_Box_MouseEnter"
                                MouseLeave="RegisterEmail_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RegisterEmail_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RegisterEmail_Box_GotFocus"
                                        LostFocus="RegisterEmail_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="邮箱" />
                                    <Image
                                        x:Name="RegisterEmail_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="3">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RegisterPass_Box_MouseEnter"
                                MouseLeave="RegisterPass_Box_MouseLeave">
                                <Grid>
                                    <Label
                                        x:Name="RegisterPass_Box_Text"
                                        Margin="2,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        Content="密码"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F" />
                                    <PasswordBox
                                        x:Name="RegisterPass_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="Black"
                                        GotFocus="RegisterPass_Box_GotFocus"
                                        LostFocus="RegisterPass_Box_LostFocus"
                                        SelectionBrush="#FF0078D7" />
                                    <Image
                                        x:Name="RegisterPass_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="4">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RegisterKey_Box_MouseEnter"
                                MouseLeave="RegisterKey_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RegisterKey_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RegisterKey_Box_GotFocus"
                                        LostFocus="RegisterKey_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="卡密" />
                                    <Image
                                        x:Name="RegisterKey_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="5">
                            <Border
                                x:Name="Register"
                                Width="220"
                                Height="35"
                                Margin="35,20,0,0"
                                HorizontalAlignment="Left"
                                Background="#FF1E6FFF"
                                CornerRadius="4"
                                MouseEnter="Register_MouseEnter"
                                MouseLeave="Register_MouseLeave">
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="注册"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="White" />
                            </Border>
                        </Grid>

                        <Grid Grid.Row="6">
                            <Border
                                x:Name="Back_Login"
                                Width="220"
                                Height="35"
                                Margin="35,10,0,0"
                                HorizontalAlignment="Left"
                                Background="#FFF7F7F7"
                                BorderBrush="#FF1E6FFF"
                                BorderThickness="2"
                                CornerRadius="4"
                                MouseEnter="Back_Login_MouseEnter"
                                MouseLeave="Back_Login_MouseLeave"
                                MouseUp="Back_Login_MouseUp">
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="返回"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="#FF1E6FFF" />
                            </Border>
                        </Grid>

                    </Grid>

                    <!--  找回密码Grid块  -->
                    <Grid
                        x:Name="Retrieve_Grid"
                        Grid.Row="1"
                        Width="0"
                        HorizontalAlignment="Right"
                        Opacity="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Label
                                Margin="90,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="找回密码"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="#FF2E2E2E" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RetrieveName_Box_MouseEnter"
                                MouseLeave="RetrieveName_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RetrieveName_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RetrieveName_Box_GotFocus"
                                        LostFocus="RetrieveName_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="用户名/邮箱" />
                                    <Image
                                        x:Name="RetrieveName_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RetrievePass_Box_MouseEnter"
                                MouseLeave="RetrievePass_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RetrievePass_Box"
                                        Margin="5,8"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RetrievePass_Box_GotFocus"
                                        LostFocus="RetrievePass_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="新密码" />
                                    <Image
                                        x:Name="RetrievePass_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="3">
                            <Border
                                Width="220"
                                Height="50"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                MouseEnter="RetrieveCode_Box_MouseEnter"
                                MouseLeave="RetrieveCode_Box_MouseLeave">
                                <Grid>
                                    <TextBox
                                        x:Name="RetrieveCode_Box"
                                        Width="110"
                                        Margin="5,8"
                                        HorizontalAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="#FFF7F7F7"
                                        BorderBrush="{x:Null}"
                                        BorderThickness="0"
                                        CaretBrush="#FF7F7F7F"
                                        FontSize="14"
                                        Foreground="#FF7F7F7F"
                                        GotFocus="RetrieveCode_Box_GotFocus"
                                        LostFocus="RetrieveCode_Box_LostFocus"
                                        SelectionBrush="#FF0078D7"
                                        Text="验证码" />
                                    <Border
                                        x:Name="CodeButton"
                                        Width="90"
                                        Margin="5,8"
                                        HorizontalAlignment="Right"
                                        Panel.ZIndex="1"
                                        Background="#FF1E6FFF"
                                        BorderThickness="0"
                                        CornerRadius="4"
                                        MouseEnter="CodeButton_MouseEnter"
                                        MouseLeave="CodeButton_MouseLeave">
                                        <Label
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{x:Null}"
                                            Content="发送验证码"
                                            FontWeight="Medium"
                                            Foreground="White" />
                                    </Border>
                                    <Image
                                        x:Name="RetrieveCode_Img"
                                        Opacity="0.8"
                                        Source="Img/userbox_1.png" />
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="4">
                            <Border
                                x:Name="Retrieve"
                                Width="220"
                                Height="35"
                                Margin="35,20,0,0"
                                HorizontalAlignment="Left"
                                Background="#FF1E6FFF"
                                CornerRadius="4"
                                MouseEnter="Retrieve_MouseEnter"
                                MouseLeave="Retrieve_MouseLeave">
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="修改"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="White" />
                            </Border>
                        </Grid>

                        <Grid Grid.Row="5">
                            <Border
                                x:Name="Retrieve_Back_Login"
                                Width="220"
                                Height="35"
                                Margin="35,10,0,0"
                                HorizontalAlignment="Left"
                                Background="#FFF7F7F7"
                                BorderBrush="#FF1E6FFF"
                                BorderThickness="2"
                                CornerRadius="4"
                                MouseEnter="Retrieve_Back_Login_MouseEnter"
                                MouseLeave="Retrieve_Back_Login_MouseLeave"
                                MouseUp="Retrieve_Back_Login_MouseUp">
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="返回"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="#FF1E6FFF" />
                            </Border>
                        </Grid>

                    </Grid>

                </Grid>

                <!--  窗口防误触备用块分块  -->
                <Grid
                    x:Name="Back_Grid"
                    Grid.Column="1"
                    Width="0"
                    Panel.ZIndex="3"
                    Background="White"
                    Opacity="0.001" />

                <!--  加载过程的分块  -->
                <Grid
                    x:Name="Loading_Grid"
                    Grid.Column="1"
                    Width="0"
                    Panel.ZIndex="4"
                    Opacity="1">

                    <Grid.Resources>
                        <Storyboard x:Key="Loading_Start" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Loading_Error" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Text"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Button"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                        </Storyboard>
                        <Storyboard x:Key="Loading_Exit" Timeline.DesiredFrameRate="300">
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Text"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="4"
                                Storyboard.TargetName="Loading_Button"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:1" />
                        </Storyboard>
                    </Grid.Resources>

                    <local:CirclePointRingLoading
                        x:Name="Loading_Img"
                        Width="60"
                        Height="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#FF1E6FFF"
                        Opacity="0" />
                    <Label
                        x:Name="Loading_Text"
                        Margin="0,0,0,40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="登录失败"
                        FontSize="15"
                        Foreground="#FF686868"
                        Opacity="0" />
                    <Border
                        x:Name="Loading_Button"
                        Width="60"
                        Height="30"
                        Margin="0,80,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#FF1E6FFF"
                        CornerRadius="5"
                        MouseEnter="Loading_Button_MouseEnter"
                        MouseLeave="Loading_Button_MouseLeave"
                        MouseUp="Loading_Button_MouseUp"
                        Opacity="0">
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="返回"
                            Foreground="White" />
                    </Border>

                </Grid>
            </Grid>

        </Border>

    </Grid>
</Window>
