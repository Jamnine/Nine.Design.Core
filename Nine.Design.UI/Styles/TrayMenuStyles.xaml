<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  浅色主题常量  -->
    <SolidColorBrush x:Key="MenuBg" Color="White" />
    <SolidColorBrush x:Key="MenuBorder" Color="#E5E7EB" />
    <SolidColorBrush x:Key="TextPrimary" Color="#1F2937" />
    <!--  深文字（白色背景用）  -->
    <SolidColorBrush x:Key="TextHover" Color="#1677FF" />
    <SolidColorBrush x:Key="BgHover" Color="#F0F7FF" />
    <SolidColorBrush x:Key="BgPressed" Color="#D6E8FF" />

    <!--  矢量图标  -->
    <Geometry x:Key="IconRestore">M2,10 L2,6 L6,6 L6,2 L10,2 L10,6 L14,6 L14,10 L10,10 L10,14 L6,14 L6,10 Z M4,8 L4,4 L8,4 L8,8 Z</Geometry>
    <Geometry x:Key="IconExit">M12,4 L10,4 L10,2 L6,2 L6,4 L4,4 L4,6 L6,6 L6,10 L4,10 L4,12 L6,12 L6,14 L10,14 L10,12 L12,12 L12,10 L14,10 L14,6 L12,6 Z</Geometry>
    <Geometry x:Key="IconHide">M4,6 L12,6 L12,10 L4,10 Z M6,8 L10,8 Z</Geometry>

    <!--  菜单容器样式  -->
    <Style x:Key="TrayContextMenuStyle_Light" TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource MenuBg}" />
        <Setter Property="BorderBrush" Value="{StaticResource MenuBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Width" Value="180" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="StaysOpen" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                        <Grid Width="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <!--  顶部Logo区（透明背景）  -->
                            <Grid
                                Grid.Row="0"
                                Margin="10,0"
                                Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Path
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Data="M8,2 C4.69,2 2,4.69 2,8 C2,11.31 4.69,14 8,14 C11.31,14 14,11.31 14,8 C14,4.69 11.31,2 8,2 Z M8,12 C5.79,12 4,10.21 4,8 C4,5.79 5.79,4 8,4 C10.21,4 12,5.79 12,8 C12,10.21 10.21,12 8,12 Z M9,5 L9,7 L11,7 L11,5 Z M7,5 L7,11 L9,11 L9,9 L11,9 L11,11 L13,11 L13,5 L11,5 L11,7 L9,7 L9,5 Z"
                                    Fill="{StaticResource TextHover}" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource TextPrimary}"
                                    Text="NINE.DESIGN" />
                            </Grid>

                            <!--  菜单选项容器  -->
                            <StackPanel
                                Grid.Row="1"
                                Margin="4,0"
                                IsItemsHost="True" />

                            <!--  底部留白  -->
                            <Grid Grid.Row="2" Background="Transparent" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  浅色菜单项样式（白色背景+深文字）  -->
    <Style x:Key="TrayMenuItemStyle_Light" TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <!--  核心：深文字  -->
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontFamily" Value="微软雅黑" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border
                        x:Name="border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Path
                                Grid.Column="0"
                                Width="16"
                                Height="16"
                                Margin="0,0,4,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Data="{TemplateBinding Tag}"
                                Fill="{TemplateBinding Foreground}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{TemplateBinding Header}"
                                TextOptions.TextRenderingMode="ClearType" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BgHover}" />
                            <Setter Property="Foreground" Value="{StaticResource TextHover}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BgPressed}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  浅色分隔线样式  -->
    <Style x:Key="TraySeparatorStyle_Light" TargetType="Separator">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border
                        Height="1"
                        Margin="8,4,8,4"
                        Background="{StaticResource MenuBorder}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>