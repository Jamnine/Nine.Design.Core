<UserControl
    x:Class="Nine.Design.Core.Views.MainMune"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="clr-namespace:Nine.Design.Clientbase;assembly=Nine.Design.Clientbase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Nine.Design.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    x:Name="RootUserControl"
    d:DesignHeight="500"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  更多弹窗样式  -->
        <Style x:Key="MoreDialogStyle" TargetType="pu:WindowX">
            <Setter Property="Width" Value="600" />
            <Setter Property="Height" Value="400" />
            <Setter Property="pu:WindowXCaption.Height" Value="40" />
            <Setter Property="pu:WindowXCaption.Background" Value="#ffb7c5" />
            <Setter Property="pu:WindowXCaption.Foreground" Value="White" />
        </Style>
    </UserControl.Resources>

    <!--  仅保留一个WrapPanel，绑定合并后的列表  -->
    <WrapPanel
        Margin="50,50,0,0"
        HorizontalAlignment="Left"
        Orientation="Horizontal">

        <ItemsControl ItemsSource="{Binding NavigationBarList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Width="90"
                        Height="101"
                        Margin="0,60,20,0"
                        HorizontalAlignment="Center">

                        <!--  按钮（根据是否是更多项切换样式）  -->
                        <Button
                            Width="70"
                            Height="70"
                            pu:ButtonHelper.CornerRadius="40,40,40,40"
                            pu:ButtonHelper.HoverBorderBrush="#f4f4f4"
                            pu:ButtonHelper.HoverBorderThickness="12"
                            pu:ButtonHelper.ShadowColor="#F8E5E5"
                            pu:IconHelper.FontSize="16"
                            pu:IconHelper.Margin="0,0,0,0"
                            pu:ShadowHelper.BlurRadius="15"
                            pu:ShadowHelper.ShadowDepth="5"
                            Background="#ffb7c5"
                            BorderBrush="#f4f4f4"
                            BorderThickness="6"
                            FontSize="30"
                            Foreground="#FFFFFF">

                            <!--<Button.Effect>
                                <DropShadowEffect
                                    BlurRadius="10"
                                    Direction="270"
                                    Opacity="0.5"
                                    ShadowDepth="3"
                                    Color="{Binding ButtonEffect}" />
                            </Button.Effect>-->

                            <!--  图片  -->
                            <Image Source="/Nine.Design.UI;component/Images/更多功能.png" />

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <cmd:EventToCommand Command="{Binding DataContext.HomeFunctionClickCommand, ElementName=RootUserControl}" CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <!--  文字（更多项文字颜色特殊）  -->
                        <TextBlock
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="{Binding Name}"
                            TextAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </WrapPanel>
</UserControl>