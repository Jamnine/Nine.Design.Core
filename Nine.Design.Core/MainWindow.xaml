<pu:WindowX
    x:Class="Nine.Design.Core.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:LayoutControl="clr-namespace:Nine.Design.Clientbase;assembly=Nine.Design.Clientbase"
    xmlns:cmd="clr-namespace:Nine.Design.Clientbase;assembly=Nine.Design.Clientbase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Nine.Design.Core.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Nine.Design.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ndcui="clr-namespace:Nine.Design.UI;assembly=Nine.Design.UI"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    xmlns:pucore="clr-namespace:Panuon.WPF;assembly=Panuon.WPF"
    xmlns:pul="https://opensource.panuon.com/wpf-ui"
    xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI"
    Width="950"
    Height="600"
    pu:ScrollBarHelper.HoverThumbBackground="{DynamicResource ThemeBrush}"
    pu:ScrollBarHelper.ThumbBackground="{DynamicResource ThemeBrushTrans6}"
    pu:WindowXCaption.Height="0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary>
                    <!--  x:Key的值是任意的，没有特殊要求  -->
                    <pu:ToastSettings x:Key="toastSetting" Spacing="0">
                        <pu:ToastSettings.LabelStyle>
                            <Style BasedOn="{StaticResource {x:Static pu:Toast.LabelStyleKey}}" TargetType="Label">
                                <Setter Property="Background" Value="#ffb7c5" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                                <Setter Property="pu:LabelHelper.CornerRadius" Value="15" />
                                <Setter Property="pu:LabelHelper.ShadowColor" Value="#ffb7c5" />
                                <Setter Property="pu:ShadowHelper.Opacity" Value="0.3" />
                            </Style>
                        </pu:ToastSettings.LabelStyle>
                    </pu:ToastSettings>
                </ResourceDictionary>
                <ResourceDictionary>
                    <!--<FontFamily x:Key="NDCIcon">/Nine.Design.UI;component/Resources/Fonts/#NDCIcon</FontFamily>-->
                    <FontFamily x:Key="PanuonIconFont">/Panuon.WPF.UI;component/Resources/Fonts/#PanuonIcon</FontFamily>
                </ResourceDictionary>
                <pul:StyleDictionary Includes="All" />
                <!--<ResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Control.xaml" />-->
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ToggleButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/SearchBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/LabelStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/PasswordBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/TextBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/DropDownStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ListBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Themes/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/TrayMenuItemStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/CirclePointRingLoading.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>

    <!--  托盘右键菜单（复用独立样式）  -->
    <Window.ContextMenu>
        <ContextMenu
            x:Name="TrayContextMenu"
            StaysOpen="False"
            Style="{StaticResource TrayContextMenuStyle_Light}">
            <MenuItem
                Click="RestoreMenuItem_Click"
                Header="还原窗口"
                Style="{StaticResource TrayMenuItemStyle_Light}"
                Tag="{StaticResource IconRestore}" />
            <Separator Style="{StaticResource TraySeparatorStyle_Light}" />
            <MenuItem
                Click="HideMenuItem_Click"
                Header="隐藏窗口"
                Style="{StaticResource TrayMenuItemStyle_Light}"
                Tag="{StaticResource IconHide}" />
            <MenuItem
                Click="ExitMenuItem_Click"
                Header="退出程序"
                Style="{StaticResource TrayMenuItemStyle_Light}"
                Tag="{StaticResource IconExit}" />
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--  左侧菜单 Drawer：移除拖动区域Rectangle（避免冲突）  -->
        <pu:Drawer
            x:Name="DrwMenu"
            MinWidth="60"
            MaxWidth="250"
            BorderThickness="0,0,1,0"
            ShadowColor="{x:Null}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- 移除左侧拖动区域：<Rectangle pu:WindowX.IsDragMoveArea="True" Fill="Transparent" /> -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="/Nine.Design.Login;component/Images/NumberNine.png" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="NINE.DESIGN" />
                    </StackPanel>
                    <ToggleButton
                        Grid.Column="1"
                        Width="60"
                        pu:ToggleButtonHelper.CheckedContent="&#xe924;"
                        Content="&#xe926;"
                        FontSize="13"
                        IsChecked="{Binding IsOpen, ElementName=DrwMenu, Mode=TwoWay}"
                        Style="{DynamicResource IconToggleButtonStyle}" />
                </Grid>
                <Rectangle
                    Grid.Row="1"
                    Height="1"
                    Fill="{DynamicResource SeparatorBrush}" />


                <Grid
                    x:Name="Loading_Grid"
                    Grid.Row="2"
                    Width="0"
                    Panel.ZIndex="9998"
                    helpers:LoadingAnimationHelper.TriggerHideAnimation="{Binding TriggerHideAnimation}"
                    helpers:LoadingAnimationHelper.TriggerShowAnimation="{Binding TriggerShowAnimation}"
                    Background="#CCF7F7F7"
                    Opacity="0">
                    <!--  🔥 核心修改：动画移到外层Loading_Grid的Resources里  -->
                    <Grid.Resources>
                        <!--  模糊遮罩样式  -->
                        <Style x:Key="BlurBackgroundStyle" TargetType="Grid">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="8" />
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!--  ========== Loading_Start 动画（移到外层） ==========  -->
                        <Storyboard x:Key="Loading_Start" Timeline.DesiredFrameRate="120">
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="0.8"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1" />
                            <!--<DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                From="0.5"
                                To="1"
                                Duration="0:0:1" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                From="0.5"
                                To="1"
                                Duration="0:0:1" />-->
                        </Storyboard>

                        <!--  ========== Loading_Hide 动画（移到外层） ==========  -->
                        <Storyboard x:Key="Loading_Hide" Timeline.DesiredFrameRate="120">
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Grid"
                                Storyboard.TargetProperty="Opacity"
                                From="0.8"
                                To="0"
                                Duration="0:0:0.5" />
                            <DoubleAnimation
                                SpeedRatio="1"
                                Storyboard.TargetName="Loading_Img"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:0.3" />
                        </Storyboard>
                    </Grid.Resources>

                    <!--  模糊背景层  -->
                    <Grid Panel.ZIndex="9998" Style="{StaticResource BlurBackgroundStyle}" />

                    <!--  加载动画层  -->
                    <Grid Panel.ZIndex="9999">
                        <ndcui:CirclePointRingLoading
                            x:Name="Loading_Img"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Panel.ZIndex="9999"
                            Foreground="#FF1E6FFF"
                            IsActive="True"
                            IsLarge="False"
                            Opacity="0"
                            Visibility="Visible">
                            <!--<ndcui:CirclePointRingLoading.RenderTransform>
                                <ScaleTransform />
                            </ndcui:CirclePointRingLoading.RenderTransform>-->
                        </ndcui:CirclePointRingLoading>
                    </Grid>
                </Grid>
                <TreeView
                    x:Name="MenuTreeView"
                    Grid.Row="2"
                    Margin="3,0,2,0"
                    pu:ScrollBarHelper.HoverThumbBackground="#E0E0E0"
                    pu:ScrollBarHelper.ThumbBackground="#ffb7c5"
                    pu:ScrollViewerHelper.ContentSpacing="5"
                    pu:ScrollViewerHelper.ScrollBarPosition="Outside"
                    pu:ScrollViewerHelper.ScrollBarThickness="3"
                    pu:TreeViewHelper.ItemsBackground="Transparent"
                    pu:TreeViewHelper.ItemsBorderBrush="Transparent"
                    pu:TreeViewHelper.ItemsCornerRadius="8,8,8,8"
                    pu:TreeViewHelper.ItemsHoverBackground="#ffb7c5"
                    pu:TreeViewHelper.ItemsHoverBorderBrush="Transparent"
                    pu:TreeViewHelper.ItemsHoverForeground="#2D3748"
                    pu:TreeViewHelper.ItemsMargin="2,2,2,2"
                    pu:TreeViewHelper.ItemsPadding="7,5,7,5"
                    pu:TreeViewHelper.ItemsSelectedBackground="#ffb7c5"
                    pu:TreeViewHelper.ItemsSelectedBorderBrush="Transparent"
                    pu:TreeViewHelper.ItemsSelectedBorderThickness="0,0,0,0"
                    pu:TreeViewHelper.ItemsSelectedForeground="#FFFFFF"
                    pu:TreeViewHelper.Scrollable="True"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="#FF818181"
                    IsHitTestVisible="True"
                    ItemsSource="{Binding NavigationBarList}"
                    Visibility="{Binding MenuTreeShow}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectedItemChanged">
                            <cmd:EventToCommand
                                Command="{Binding TreeViewItemSelectedCommand}"
                                CommandParameter="{Binding SelectedItem, ElementName=MenuTreeView}"
                                PassEventArgsToCommand="False" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Grid
                                Height="30"
                                VerticalAlignment="Center"
                                Focusable="True"
                                IsHitTestVisible="True">
                                <StackPanel Height="30" Orientation="Horizontal">
                                    <Label
                                        Margin="-5"
                                        VerticalAlignment="Center"
                                        pu:LabelHelper.Icon="{Binding IconCode}"
                                        Background="Transparent"
                                        Focusable="True"
                                        IsHitTestVisible="True" />
                                    <TextBlock
                                        Height="20"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        Focusable="True"
                                        Text="{Binding Name}"
                                        TextAlignment="Center" />
                                </StackPanel>

                            </Grid>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <ListBox
                    x:Name="MenuListBox"
                    Grid.Row="2"
                    Margin="10,15,10,0"
                    pu:ScrollBarHelper.HoverThumbBackground="#E0E0E0"
                    pu:ScrollBarHelper.ThumbBackground="#ffb7c5"
                    pu:ScrollViewerHelper.ContentSpacing="5"
                    pu:ScrollViewerHelper.ScrollBarPosition="Outside"
                    pu:ScrollViewerHelper.ScrollBarThickness="5"
                    ItemsSource="{Binding NavigationBarList}"
                    SelectedIndex="{Binding SelectedMainMenuIndex}"
                    Style="{DynamicResource MainMenuListBoxStyle}"
                    Visibility="{Binding MenuListShow}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Label
                                    Margin="-3,0,0,0"
                                    pu:LabelHelper.Icon="{Binding IconCode}"
                                    Background="Transparent" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </pu:Drawer>
        <!--  右侧主内容区域  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <!--  标题栏高度  -->
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  右侧标题栏：保留拖动区域，绑定MouseDown事件  -->
            <!--<Rectangle pu:WindowX.IsDragMoveArea="True" Fill="Transparent" />-->
            <Grid
                Grid.Row="0"
                Background="Transparent"
                MouseDown="TitleBar_MouseDown">
                <!--  拖动区域：仅右侧标题栏可拖动  -->

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <pu:SearchBox
                    Width="270"
                    Margin="20,0,0,0"
                    Icon="&#xe928;"
                    Style="{DynamicResource StandardSearchBoxStyle}"
                    Watermark="查找 ..." />
                <Button
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Content="&#xe9bd;"
                    FontSize="14"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Content="&#xe937;"
                    FontSize="14"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <Button
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Command="{Binding MsgClickComCommand}"
                    Content="&#xe9bf;"
                    FontSize="14"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  最小化按钮  -->
                <Button
                    x:Name="btn_Mini"
                    Grid.Column="5"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    pu:ButtonHelper.Icon="&#xe92a;"
                    pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}"
                    Click="BtnMinimize_Click"
                    FontSize="14"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  最大化/还原按钮  -->
                <Button
                    x:Name="btn_Max"
                    Grid.Column="6"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    pu:ButtonHelper.Icon="&#xe9c7;"
                    pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}"
                    Click="BtnMaximize_Click"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  用户下拉框  -->
                <pu:DropDown
                    Grid.Column="7"
                    Width="Auto"
                    Height="40"
                    Margin="10,11,20,10"
                    pu:DropDownHelper.Placement="BottomLeft"
                    Style="{DynamicResource StandardDropDownStyle}">
                    <pu:DropDown.Content>
                        <ToggleButton
                            HorizontalContentAlignment="Stretch"
                            IsChecked="{Binding IsOpen, RelativeSource={RelativeSource AncestorType=pu:DropDown}, Mode=TwoWay}"
                            Style="{DynamicResource OptionsToggleButtonStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock FontSize="14" Text="{Binding UserInfo.UserName}" />
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    FontSize="9"
                                    Foreground="{DynamicResource DescriptionForeground}"
                                    Text="{Binding UserInfo.RoleName}" />
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    Width="30"
                                    Height="30"
                                    Margin="15,0,0,0"
                                    BorderBrush="{DynamicResource WindowBackground}"
                                    BorderThickness="1"
                                    CornerRadius="15">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Nine.Design.UI;component/Resources/Images/headimage_1.png" />
                                    </Border.Background>
                                </Border>
                                <!--<TextBlock
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource NDCIcon}"
                                    Text="&#xe901;" />-->
                            </Grid>
                        </ToggleButton>
                    </pu:DropDown.Content>
                    <pu:DropDown.Child>
                        <StackPanel>
                            <Button
                                x:Name="btn_Exit"
                                pu:ButtonHelper.Icon="&#xe933;"
                                Click="btn_Exit_Click"
                                Content="Exit"
                                Style="{DynamicResource OptionsButtonStyle}" />
                        </StackPanel>
                    </pu:DropDown.Child>
                </pu:DropDown>
            </Grid>
            <!--  分隔线  -->
            <Rectangle
                Grid.Row="1"
                Height="1"
                Fill="{DynamicResource SeparatorBrush}" />
            <!--  主内容区域  -->
            <LayoutControl:LayoutContentGrid
                x:Name="LayoutDisplayContent"
                Grid.Row="2"
                Background="{x:Null}"
                ClipToBounds="True"
                Content="{Binding LayoutDisplayContent}" />
        </Grid>
    </Grid>
</pu:WindowX>