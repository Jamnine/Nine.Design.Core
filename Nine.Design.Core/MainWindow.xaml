<pu:WindowX
    x:Class="Nine.Design.Core.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:LayoutControl="clr-namespace:Nine.Design.Clientbase;assembly=Nine.Design.Clientbase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Nine.Design.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    xmlns:pucore="clr-namespace:Panuon.WPF;assembly=Panuon.WPF"
    xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI"
    Width="950"
    Height="600"
    pu:ScrollBarHelper.HoverThumbBackground="{DynamicResource ThemeBrush}"
    pu:ScrollBarHelper.ThumbBackground="{DynamicResource ThemeBrushTrans6}"
    pu:WindowXCaption.Height="0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Control.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ToggleButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/SearchBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/LabelStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/PasswordBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/TextBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/DropDownStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Styles/ListBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nine.Design.UI;component/Themes/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                x:Key="MainMenuTreeViewStyle"
                BasedOn="{StaticResource {x:Type TreeView}}"
                TargetType="TreeView">
                <Setter Property="pu:IconHelper.FontFamily" Value="{StaticResource PanuonIconFont}" />
                <Setter Property="pu:IconHelper.FontSize" Value="20" />
                <Setter Property="pu:TreeViewHelper.ItemsBorderBrush" Value="Transparent" />
                <Setter Property="pu:TreeViewHelper.ItemsSelectedBorderBrush" Value="#C62F2F" />
                <Setter Property="pu:TreeViewHelper.ItemsSelectedBackground" Value="#E8E8E8" />
                <Setter Property="pu:TreeViewHelper.ItemsBorderThickness" Value="3,0,0,0" />
                <Setter Property="pu:TreeViewHelper.ItemsHeight" Value="33" />
                <Setter Property="pu:TreeViewHelper.ItemsPadding" Value="10,0" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="pu:TreeViewHelper.ItemsMargin" Value="20,0,10,0" />
                <Setter Property="pu:TreeViewHelper.ToggleArrowToggleButtonStyle" Value="{x:Null}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--  左侧菜单 Drawer：移除拖动区域Rectangle（避免冲突）  -->
        <pu:Drawer
            x:Name="DrwMenu"
            MinWidth="60"
            MaxWidth="250"
            BorderThickness="0,0,1,0"
            ShadowColor="{x:Null}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- 移除左侧拖动区域：<Rectangle pu:WindowX.IsDragMoveArea="True" Fill="Transparent" /> -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="/Nine.Design.Login;component/Images/NumberNine.png" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="NINE.DESIGN" />
                    </StackPanel>
                    <ToggleButton
                        Grid.Column="1"
                        Width="60"
                        pu:ToggleButtonHelper.CheckedContent="&#xe914;"
                        Content="&#xe915;"
                        IsChecked="{Binding IsOpen, ElementName=DrwMenu, Mode=TwoWay}"
                        Style="{DynamicResource IconToggleButtonStyle}" />
                </Grid>
                <Rectangle
                    Grid.Row="1"
                    Height="1"
                    Fill="{DynamicResource SeparatorBrush}" />
                <ListBox
                    Grid.Row="2"
                    Margin="10,15,10,0"
                    SelectedIndex="{Binding SelectedMainMenuIndex}"
                    Style="{DynamicResource MainMenuListBoxStyle}">
                    <ListBoxItem pu:ListBoxItemHelper.Icon="&#xe904;" Content="首页" />
                    <ListBoxItem pu:ListBoxItemHelper.Icon="&#xe90a;" Content="信息" />
                    <ListBoxItem pu:ListBoxItemHelper.Icon="&#xe913;" Content="任务" />
                    <ListBoxItem pu:ListBoxItemHelper.Icon="&#xe910;" Content="记事本" />
                    <ListBoxItem pu:ListBoxItemHelper.Icon="&#xe912;" Content="设置" />
                </ListBox>
            </Grid>
        </pu:Drawer>
        <!--  右侧主内容区域  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <!--  标题栏高度  -->
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  右侧标题栏：保留拖动区域，绑定MouseDown事件  -->
            <!--<Rectangle pu:WindowX.IsDragMoveArea="True" Fill="Transparent" />-->
            <Grid
                Grid.Row="0"
                Background="Transparent"
                MouseDown="TitleBar_MouseDown">
                <!--  拖动区域：仅右侧标题栏可拖动  -->

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <pu:SearchBox
                    Width="270"
                    Margin="20,0,0,0"
                    Icon="&#xe911;"
                    Style="{DynamicResource StandardSearchBoxStyle}"
                    Watermark="查找 ..." />
                <Button
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Content="&#xe903;"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Content="&#xe90c;"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <Button
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    Content="&#xe90d;"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  最小化按钮  -->
                <Button
                    x:Name="btn_Mini"
                    Grid.Column="5"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    pu:ButtonHelper.Icon="&#xe92a;"
                    pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}"
                    Click="BtnMinimize_Click"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  最大化/还原按钮  -->
                <Button
                    x:Name="btn_Max"
                    Grid.Column="6"
                    Margin="10,0,0,0"
                    pu:ButtonHelper.ClickEffect="Sink"
                    pu:ButtonHelper.Icon="&#xe9c7;"
                    pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}"
                    Click="BtnMaximize_Click"
                    Style="{DynamicResource DescriptionIconButtonStyle}" />
                <!--  用户下拉框  -->
                <pu:DropDown
                    Grid.Column="7"
                    Width="Auto"
                    Height="40"
                    Margin="10,10,20,10"
                    pu:DropDownHelper.Placement="BottomLeft"
                    Style="{DynamicResource StandardDropDownStyle}">
                    <pu:DropDown.Content>
                        <ToggleButton
                            HorizontalContentAlignment="Stretch"
                            IsChecked="{Binding IsOpen, RelativeSource={RelativeSource AncestorType=pu:DropDown}, Mode=TwoWay}"
                            Style="{DynamicResource OptionsToggleButtonStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock FontSize="11" Text="{Binding UserInfo.UserName}" />
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    FontSize="11"
                                    Foreground="{DynamicResource DescriptionForeground}"
                                    Text="{Binding UserInfo.RoleName}" />
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    Width="30"
                                    Height="30"
                                    Margin="15,0,0,0"
                                    BorderBrush="{DynamicResource WindowBackground}"
                                    BorderThickness="1"
                                    CornerRadius="15">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Nine.Design.UI;component/Resources/Images/headimage_1.png" />
                                    </Border.Background>
                                </Border>
                                <TextBlock
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource NDCIcon}"
                                    Text="&#xe901;" />
                            </Grid>
                        </ToggleButton>
                    </pu:DropDown.Content>
                    <pu:DropDown.Child>
                        <StackPanel>
                            <Button
                                x:Name="btn_Exit"
                                pu:ButtonHelper.Icon="&#xe904;"
                                Click="btn_Exit_Click"
                                Content="Exit"
                                Style="{DynamicResource OptionsButtonStyle}" />
                        </StackPanel>
                    </pu:DropDown.Child>
                </pu:DropDown>
            </Grid>
            <!--  分隔线  -->
            <Rectangle
                Grid.Row="1"
                Height="1"
                Fill="{DynamicResource SeparatorBrush}" />
            <!--  主内容区域  -->
            <LayoutControl:LayoutContentGrid
                x:Name="LayoutDisplayContent"
                Grid.Row="2"
                Background="{x:Null}"
                ClipToBounds="True"
                Content="{Binding LayoutDisplayContent}" />
        </Grid>
    </Grid>
</pu:WindowX>