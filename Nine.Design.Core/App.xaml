<Application x:Class="Nine.Design.Core.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
             xmlns:local="clr-namespace:Nine.Design.Core" 
             xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI"
             xmlns:pucore="clr-namespace:Panuon.WPF;assembly=Panuon.WPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <FontFamily x:Key="NDCIcon">/Nine.Design.UI;component/Resources/Fonts/#NDCIcon</FontFamily>
                    <FontFamily x:Key="PanuonIcon">/Nine.Design.UI;component/Resources/Fonts/#PanuonIcon</FontFamily>
                </ResourceDictionary>
                <ResourceDictionary>
                    <!--<com:AppBootstrapper x:Key="bootstrapper" />-->

                    <pu:GlobalSettings x:Key="globalSettings"
                                        FontFamily="Segoe UI, 微软雅黑, Arial" 
                                        FontSize="14"
                                        IconFontFamily="{StaticResource NDCIcon}"
                                        IconFontSize="16" />
                </ResourceDictionary>
                <!--<ResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Control.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>